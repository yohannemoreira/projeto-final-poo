package facade;

import java.util.Collection;

import community.Community;
import community.CommunityCollection;
import exceptions.NotFoundCommunityException;
import exceptions.RegisteredCommunityException;

public class ModelFacade {
	private CommunityCollection communityCollection;
	
	public ModelFacade() {
		super();
		this.communityCollection = new CommunityCollection();
	}


	public CommunityCollection getCommunityCollection() {
		return communityCollection;
	}

	public void setCommunityCollection(CommunityCollection communityCollection) {
		this.communityCollection = communityCollection;
	}
	
	public void addCommunity(Community community) throws RegisteredCommunityException {
		System.out.println("Adicionando comunidade");
		communityCollection.addCommunity(community);
	}
	
	public void removeCommunity(Community community) throws NotFoundCommunityException{
		System.out.println("Removendo comunidade");
		communityCollection.removeCommunity(community);
	}
	
	public void list() {
		Collection<Community> listCommunity = communityCollection.list();
		System.out.println(listCommunity);
	}
	
}
